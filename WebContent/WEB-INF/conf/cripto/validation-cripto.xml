<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN" "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">
<form-validation>
	<formset>
		<form name="LogonCriptoDynaForm">
			<field property="criptoPassword" depends="required">
				<arg bundle="labels" key="app.label.contraseniaCriptografia" position="0" />
			</field>
		</form>
		
		<form name="ModificarPasswordDynaForm">
			<field property="oldPassword" depends="required">
				<arg bundle="labels" key="app.label.contraseniaCriptografiaAnterior" position="0" />
			</field>
			<field property="newPassword" depends="required">
				<arg bundle="labels" key="app.label.nuevaContraseniaCriptografia" position="0" />
			</field>
			<field property="confirmNewPassword" depends="required">
				<arg bundle="labels" key="app.label.confirmacionNuevaContraseniaCriptografia" position="0" />
			</field>
		</form>
				
	</formset>
</form-validation>		